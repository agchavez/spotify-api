generator client {
  provider = "prisma-client-js"
  output   = "./generated/store"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_STORE_URL")
}

model categorias {
  id        Int         @id
  nombre    String?     @db.VarChar(100)
  productos productos[]
}

model clientes {
  id        Int       @id
  nombre    String?   @db.VarChar(100)
  direccion String?   @db.VarChar(200)
  telefono  String?   @db.VarChar(20)
  compras   compras[]
}

model compras {
  id          Int        @id
  cliente_id  Int?
  producto_id Int?
  cantidad    Int?
  fecha       DateTime?  @db.Date
  clientes    clientes?  @relation(fields: [cliente_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  productos   productos? @relation(fields: [producto_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model productos {
  id           Int         @id
  nombre       String?     @db.VarChar(100)
  precio       Decimal?    @db.Decimal(10, 2)
  descripcion  String?     @db.VarChar(200)
  categoria_id Int?
  compras      compras[]
  categorias   categorias? @relation(fields: [categoria_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
